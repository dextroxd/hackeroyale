<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ReadActivity"
    android:orientation="vertical"
    android:background="?attr/readback">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?attr/readtext"
        android:textSize="24sp"
        android:fontFamily="@font/ebb"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:id="@+id/textc1"
        android:layout_alignParentTop="true"/>

        <WebView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/readtext"
            android:textSize="20sp"
            android:id="@+id/desc1"
            android:layout_below="@id/textc1"
            android:layout_above="@+id/adView"
            android:layout_margin="8dp"
            />
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner"
        android:layout_above="@id/buttons"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="?attr/readback"
        android:id="@+id/buttons">
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/LeftClick"
            android:src="@drawable/ic_chevron_left_black_24dp"
            android:backgroundTint="?attr/readback"
            android:tint="?attr/readtext"
            android:clickable="true"
            android:focusable="true"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/sharethis"
            android:src="@drawable/ic_share_black_24dp"
            android:backgroundTint="?attr/readback"
            android:tint="?attr/readtext"
            android:clickable="true"
            android:focusable="true"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_star_black_24dp"
            android:backgroundTint="?attr/readback"
            android:id="@+id/starre1"
            android:tint="?attr/readtext"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_check_black_24dp"
            android:backgroundTint="?attr/readback"
            android:id="@+id/starred"
            android:tint="#800000"
            />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/RightClick"
            android:src="@drawable/ic_chevron_right_black_24dp"
            android:backgroundTint="?attr/readback"
            android:tint="?attr/readtext"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

</RelativeLayout>